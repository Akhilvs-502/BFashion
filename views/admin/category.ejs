  <p class="font-extrabold ml-1 mt-12">Category List</p> 
  <a href="/admin/addCategory"> <button class="btn rounded-full py-3 text-white text-sm  float-right px-4 bg-poppy-red">ADD CATEGORY</button></a>
  
    <div class="font-sans  right-0">
        <table class="w-full bg-white">
          <thead class="bg-gray-100 whitespace-nowrap">
            <tr>
              <th class="p-4 text-left text-xs font-semibold text-gray-800">
                Sl no
              </th>
              <th class="p-4 text-left text-xs font-semibold text-gray-800">
               Category
              </th>
              
             
              <th class="p-4 text-left text-xs font-semibold text-gray-800">
                Status
              </th>
              <th class="p-4 text-left text-xs font-semibold text-gray-800">
                Block/Unblock
              </th>
              <th class="p-4 text-left text-xs font-semibold text-gray-800">
                Edit
              </th>
            </tr>
          </thead>
    
          <tbody class="whitespace-nowrap">
          
              <%categories.forEach((category,index)=>{ %> 
                <tr class="hover:bg-gray-50">
                    <td  class="p-4 text-[15px] text-gray-800">
                      <p id="email"> <%= (currentPage - 1) * limit + index + 1 %></p> 
                     
                    </td>
                    <td class="p-4 text-[15px] text-gray-800">
                        <p><%=  category.categoryName %></p>

                    </td>
                    <td class="p-4 text-[15px] text-gray-800">
                             <% if(category.block) {%>
                                <p class="status">Blocked</p>
                                <%}
                                else{%>

                                    <p class="status"> Active</p>
                                    <%} %>
       
                    </td>
                    <td class="p-4">
                      <div class="flex items-center">
                          
                          <label class="relative cursor-pointer"   >
                            <input type="checkbox" id="toggleBtn" data-email="<%=category.categoryName %>" class="sr-only peer" <% if(category.block) {%> checked <%} %> />
                            <div
                              class="w-11 h-6 flex items-center bg-gray-300 rounded-full peer peer-checked:after:translate-x-full after:absolute after:left-[2px] peer-checked:after:border-white after:bg-white after:border after:border-gray-300 after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-[#007bff]">
                            </div>
                          </label>
                        </div>
                    </td>

                    
<td class="p-4">
    <a href="/admin/editCategory/<%=category.categoryName %>">
    <button class="mr-4" title="Edit">
